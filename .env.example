# ========================================
# CONFIGURACIÓN DE LA APLICACIÓN
# ========================================
NODE_ENV=development
PORT=3000
API_PREFIX=api/v1

# ========================================
# BASE DE DATOS MYSQL
# ========================================
DB_HOST=localhost
DB_PORT=3306
DB_USERNAME=inventory_app
DB_PASSWORD=your_secure_password_here
DB_DATABASE=inventory_system

# Configuración de conexión
DB_SYNCHRONIZE=false
DB_LOGGING=true
DB_MAX_CONNECTIONS=100
DB_IDLE_TIMEOUT=10000

# SSL/TLS (opcional - para producción)
# DB_SSL_CA=/path/to/ca-cert.pem
# DB_SSL_CERT=/path/to/client-cert.pem
# DB_SSL_KEY=/path/to/client-key.pem

# ========================================
# SEGURIDAD - JWT
# ========================================
JWT_SECRET=your_super_secret_jwt_key_change_this_in_production
JWT_EXPIRATION=15m
JWT_REFRESH_SECRET=your_super_secret_refresh_key_change_this_too
JWT_REFRESH_EXPIRATION=7d

# ========================================
# SEGURIDAD - PASSWORDS
# ========================================
BCRYPT_ROUNDS=10

# ========================================
# SEGURIDAD - MFA
# ========================================
MFA_APP_NAME=Inventory System
MFA_ISSUER=YourCompany

# ========================================
# SEGURIDAD - RATE LIMITING
# ========================================
THROTTLE_TTL=60000
THROTTLE_LIMIT=100

# Específico para login (más restrictivo)
THROTTLE_LOGIN_TTL=900000
THROTTLE_LOGIN_LIMIT=5

# ========================================
# CORS
# ========================================
CORS_ENABLED=true
CORS_ORIGIN=http://localhost:4200,http://localhost:3001
CORS_CREDENTIALS=true

# ========================================
# SWAGGER/DOCUMENTACIÓN
# ========================================
SWAGGER_ENABLED=true
SWAGGER_TITLE=Inventory System API
SWAGGER_DESCRIPTION=Sistema de Gestión de Inventario con Seguridad
SWAGGER_VERSION=1.0
SWAGGER_PATH=docs

# ========================================
# LOGGING
# ========================================
LOG_LEVEL=debug
LOG_FILE_ENABLED=true
LOG_FILE_PATH=./logs
LOG_MAX_FILES=10
LOG_MAX_SIZE=10m

# ========================================
# AUDITORÍA
# ========================================
AUDIT_ENABLED=true
AUDIT_LOG_REQUESTS=true
AUDIT_LOG_RESPONSES=false

# ========================================
# SESIONES Y BLOQUEOS
# ========================================
# Intentos de login fallidos antes de bloquear
MAX_LOGIN_ATTEMPTS=5
# Tiempo de bloqueo en minutos
ACCOUNT_LOCK_TIME=15

# Tiempo máximo de inactividad de sesión (minutos)
SESSION_TIMEOUT=30

# ========================================
# POLÍTICAS DE CONTRASEÑAS
# ========================================
PASSWORD_MIN_LENGTH=12
PASSWORD_REQUIRE_UPPERCASE=true
PASSWORD_REQUIRE_LOWERCASE=true
PASSWORD_REQUIRE_NUMBERS=true
PASSWORD_REQUIRE_SPECIAL_CHARS=true
PASSWORD_EXPIRATION_DAYS=90
PASSWORD_HISTORY_COUNT=6

# ========================================
# EMAIL (para notificaciones)
# ========================================
# MAIL_HOST=smtp.gmail.com
# MAIL_PORT=587
# MAIL_SECURE=false
# MAIL_USER=your-email@gmail.com
# MAIL_PASSWORD=your-app-password
# MAIL_FROM=noreply@inventory-system.local

# ========================================
# REDIS (opcional - para caché y sesiones)
# ========================================
# REDIS_HOST=localhost
# REDIS_PORT=6379
# REDIS_PASSWORD=
# REDIS_DB=0
# REDIS_TTL=3600

# ========================================
# FEATURES FLAGS
# ========================================
FEATURE_MFA_REQUIRED=false
FEATURE_PASSWORD_RESET_ENABLED=true
FEATURE_EMAIL_VERIFICATION=false
